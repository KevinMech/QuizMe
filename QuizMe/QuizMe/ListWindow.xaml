<Window x:Class="QuizMe.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizMe"
        mc:Ignorable="d"
        Title="ListWindow" Height="350" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Background="#FF5CAB8A">
        <ListBox Margin="10" VerticalAlignment="Top" Height="260"/>
        <Button x:Name="btnNew" Width="100" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10" Content="New" Click="btnNew_Click" Background="#FFBADEBA"/>
        <Button x:Name="btnDelete" Width="100" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Content="Delete" Background="#FFF49696"/>
    </Grid>
</Window>
