<Window x:Class="QuizMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizMe"
        mc:Ignorable="d"
        Title="QuizMe" Height="280" Width="250" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF5CAB8A">
        <Button x:Name="btnStart" Width="150" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Content="Start A Quiz" Background="#FFBADEBA" />
        <Button x:Name="btnEdit" Width="150" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0" Content="Create/Edit Quiz" Background="#FFBADEBA" Click="btnEdit_Click" />
        <Button x:Name="btnExit" Width="150" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0" Content="Exit" Background="#FFC4C977" />
        <Label Content="QuizMe" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15" FontSize="24" FontFamily="Franklin Gothic Book" BorderBrush="#FF7F8545" FontStyle="Italic"/>
    </Grid>
</Window>
